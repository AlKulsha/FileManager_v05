<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.AuthController">
    <Label text = "Autentication"/>
    <HBox>
        <Label text = "Login"/>
        <TextField fx:id="login" HBox.hgrow="NEVER"/>
        <padding>
            <Insets left="20" right="20"/>
        </padding>
    </HBox>
    <HBox>
        <Label text = "Password"/>
        <TextField fx:id="password" HBox.hgrow="NEVER"/>
        <padding>
            <Insets left="20" right="20"/>
        </padding>
    </HBox>
    <HBox>
        <Button maxWidth="Infinity" text = "Log in" HBox.hgrow="ALWAYS" onAction="#btnAuth"/>
        <Button maxWidth="Infinity" text = "Exit" HBox.hgrow="ALWAYS" onAction="#btnExitAction"/>
        <padding>
            <Insets left="20" right="20"/>
        </padding>
    </HBox>
</VBox>
